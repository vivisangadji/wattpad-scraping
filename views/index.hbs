<div class="row justify-content-center align-items-center mt-5">
	<div class="col-md-10"> 
		<form action="/" method="POST" class='d-flex mb-4'>
            <div class="input-group ">
                <input type="text" name="search" class="form-control" placeholder="Ketik pencarian..." autofocus autocomplete="off">
                <button class="btn btn-primary" type="submit" id="btnCari">Cari!</button>
            </div>
        </form>
    </div>
</div>
{{#if result}}	
<div class="row justify-content-center align-items-center">
	<h3 class="fw-bold">Hasil Pencarian: <span class="badge bg-primary mb-1">{{title}}</span></h3>
	{{#each result}}
	<div class="col-md-6">
		<div class="card mb-3 mt-2" style="max-width: 540px;">
		  <div class="row g-0">
		    <div class="col-md-4">
		      <img src="{{img}}" class="h-100 img-fluid rounded-start" alt="...">
		    </div>
		    <div class="col-md-8">
		      <div class="card-body">
		        <h5 class="card-title"><a class="text-dark" href="{{url}}" target="_blank" style="text-decoration: none;">{{title}}</a></h5>
		        <p class="card-text">{{author}}</p>
		        <p class="card-text">
		        	<small class="text-muted me-3"><i class="bi bi-eye-fill"></i> {{read}}</small>
		        	<small class="text-muted me-3"><i class="bi bi-star-fill"></i> {{vote}}</small>
		        	<small class="text-muted me-3"><i class="bi bi-list"></i> {{part}}</small>
		        </p>
		        <p class="card-text text-secondary">{{description}}</p>
		        <p class="card-text">
		        	{{#each tagList}}
		        		<span class="badge rounded-pill bg-warning text-light">{{this}}</span>
		        	{{/each}}
		        </p>
		      </div>
		    </div>
		  </div>
		</div>
	</div>
	{{/each}}		
</div>	
{{/if}}